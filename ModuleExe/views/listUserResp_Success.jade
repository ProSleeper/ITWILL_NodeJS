doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,height=device-height,initial-scale=1')
    title 사용자 리스트 목록
    // jQuery 기반 css
    link(rel='stylesheet' type='text/css' href='../public1/data/semantic.min.css')
    link(rel='stylesheet' type='text/css' href='../public1/data/listUserResp.css')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='../public1/data/semantic.min.js')
  body
    .container
      br
      .ui.raised.segment
        a.ui.blue.ribbon.label 사용자 리스트(View - jade)
        br
        br
        // 세로모양 카드
        .ui.two.column.grid
          - for(var i=0;i<result.length;i++){
            .column
              .ui.card
                .image
                  img(src='../public1/image/suzi.png')
                .content
                  a.header #{result[i]._doc.name}
                  .meta
                    span.date
                      #{moment(result[i]._doc.created).format('YYYY년 MM월 DD일')}
                  .description
                    br
                    p 키: 158cm
                    p 나이: #{result[i]._doc.age}
                .extra.content
                  #{i*7+100} Friends
          - }
